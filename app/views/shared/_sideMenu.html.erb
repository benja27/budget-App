

<div class='bg-primary' >
  <div class='d-flex justify-content-end p-3' >    
    <i class='fas fa-close fs-1' id="close-side-menu" ></i>
  </div>

  <div class='d-flex flex-column align-items-start gap-3 mt-5 px-4 ' >

    <div class='d-flex flex-column align-items-center p-4 mb-4 justify-self-center'  >    
      <i class='fas fa-user' ></i>  
      <% if current_user %>
        <h6> <%=current_user.name%> </h6>  
      <%end%>
    </div>

    <div class='d-flex align-items-center gap-4' >
      <i class='fas fa-cog fs-4' ></i>
      <%=link_to "Account settings", edit_user_registration_path, class: "text-white text-decoration-none" %>      
      
    </div>
    <hr class='w-100 m-0 p-0 mb-3'  >
    
    <div class='side-menu-item d-flex align-items-center gap-4' >
      <i class='fas fa-plus-circle fs-4' ></i>
      <%=link_to "New Group", new_group_path, class: "text-white text-decoration-none" %>      
    </div>
    <hr class='w-100 m-0 p-0 mb-3'  >

    <div class='d-flex align-items-center gap-4' >
      <i class='fas fa-pencil-alt fs-4' ></i>
      <%=link_to "New movement", new_movement_path, class: "text-white text-decoration-none" %>      
    </div>
    <hr class='w-100 m-0 p-0 mb-3'  >

    <div class='d-flex align-items-center gap-4' >
      <i class='fas fa-home fs-4' ></i>
      <%=link_to "Home / Index", groups_path, class: "text-white text-decoration-none" %>      
    </div>
    <hr class='w-100 m-0 p-0 mb-3'  >
    
    
    <div class='d-flex align-items-center gap-4' >
      <i class='fas fa-sign-out-alt fs-4' ></i>      
      <%=button_to "Salir", destroy_user_session_path,method: :delete, class: " bg-transparent border border-0  text-white" %>      
    </div>
    <hr class='w-100 m-0 p-0 mb-3'  >    
      
  </div>

</div>

